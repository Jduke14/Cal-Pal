{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

{% block headblock %} 
<script 
	src="https://code.jquery.com/jquery-2.2.4.min.js"
	integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
	crossorigin="anonymous">
</script>
<script
  src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
  integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
  crossorigin="anonymous"></script>
<script src="{{ asset('js/moment.js') }}"></script>
<link href="https://code.jquery.com/ui/jquery-ui-git.css" rel="stylesheet">

<script>
  	$(document).ready(function() {
		var url = '{{ path('get_company') }}';
	    $.ajax(url, {
	        type: 'GET',
	        timeout: 30*1000,
	        dataType: 'json',
	        data: {
	            companyid: '1',
	            _: Math.round(new Date().getTime() / 1000) // prevents browswer caching
	        },
	        success: function(company) {
	        	var htmlString = '<table> <th> Company Name </th> <th> Phone Number </th> <th> Email Address</th>';
	        	var phoneNumber;
	        	for( var i = 0; i < company.length; i++) {
	        		phoneNumber = '(' + company[i].company_phone_number.substring(0, 3) + ')' + ' ' + company[i].company_phone_number.substring(3, 6) + ' - ' + company[i].company_phone_number.substring(6, 10);
	        		htmlString = htmlString + '<tr>' +
	        			'<td> ' + company[i].company_name + '</td>' + 
	        			'<td>' + phoneNumber + '</td>' +
	        			'<td>' + company[i].company_email + '</td> </tr>';
	        	}
	        	htmlString = htmlString + '</table>';
	        	$('#list').html(htmlString);
	        }
	    })
  	})
</script>
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
  <h2>About</h2>
      <h3>Developers</h3>
          <p>This section will display the information of the company</p>
</div>

<div id="list">

</div>
{% endblock %}
